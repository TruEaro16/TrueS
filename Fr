#include <iostream>
#include <array>
#include <algorithm> // Для std::find

using namespace std;

int main() {
    // Заранее определенный массив чисел
    array<int, 5> numbers = {1, 2, 3, 4, 5};

    // Запрашиваем у пользователя число
    cout << "Введите число: ";
    int input;
    cin >> input;

    // Используем if с инициализацией для поиска числа в массиве
    if (auto it = find(numbers.begin(), numbers.end(), input); it != numbers.end()) {
        cout << "Число найдено!" << endl;
    } else {
        cout << "Число не найдено." << endl;
    }

    return 0;
}

#include <iostream>

using namespace std;

int main() {
    // Запрашиваем символ действия у пользователя
    cout << "Введите символ действия (l для влево, r для вправо, u для вверх, d для вниз): ";
    char action;
    cin >> action;

    // Используем switch с инициализацией
    switch (char act = action; act) {
        case 'l':
            cout << "Движение влево" << endl;
            break;
        case 'r':
            cout << "Движение вправо" << endl;
            break;
        case 'u':
            cout << "Движение вверх" << endl;
            break;
        case 'd':
            cout << "Движение вниз" << endl;
            break;
        default:
            cout << "Неизвестное действие" << endl;
    }

    return 0;
}

#include <iostream>

using namespace std;

int main() {
    // Инициализация переменной с помощью auto
    auto number = 3.14;  // Здесь типом переменной будет double
    cout << "Тип переменной number: double, значение: " << number << endl;

    // Изменим инициализацию для другого типа
    auto anotherNumber = {1};  // Теперь тип переменной - std::initializer_list<int>
    cout << "Тип переменной anotherNumber: initializer_list<int>, значение: {1}" << endl;

    return 0;
}

#include <iostream>
#include <initializer_list>

using namespace std;

// Функция для вывода суммы элементов initializer_list
void print_sum(initializer_list<int> values) {
    int sum = 0;
    for (int value : values) {
        sum += value;
    }
    cout << "Сумма: " << sum << endl;
}

int main() {
    // Вызов функции с разным количеством аргументов
    print_sum({1, 2, 3});       // Сумма: 6
    print_sum({5, 10, 15, 20}); // Сумма: 50
    print_sum({7});             // Сумма: 7

    return 0;
}




