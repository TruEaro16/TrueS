// Вычисляем A*r
for (int i = 0; i < A.n; i++) {
    Ax[i] = 0;  // Обнуляем Ax перед использованием
}

for (int j = 0; j < A.n; j++) {
    for (int i = A.ANL[j]; i < A.ANL[j + 1]; i++) {
        int row = A.ANR[i];  // Индекс строки для текущего элемента
        if (row >= 0 && row < A.n) {  // Проверка на корректность индекса строки
            Ax[row] += A.AV[i] * r[j];
        } else {
            cout << "Ошибка индекса: row = " << row << ", n = " << A.n << endl;
        }
    }
}
